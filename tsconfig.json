{
    "compilerOptions": {
      "sourceMap": true,
      "removeComments": true,
  
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
  
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "baseUrl": "./",
      "paths": {
        "@lingo/core": [
          "packages/server"
        ],
        "@lingo/core/*": [
          "packages/server/*"
        ],
        "@lingo/tools": [
          "packages/tools"
        ],
        "@lingo/tools/*": [
          "packages/tools/*"
        ]
      }
    }
  }
  