{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["ES2019"],
    "paths": {
      "@lingo/tools/*": [
        "./*"
      ],
      "@lingo/tools": [
        "./"
      ],
      "@google/*": [
        "src/google/*"
      ],
      "@google": [
        "src/google"
      ]
    }
  }
}
